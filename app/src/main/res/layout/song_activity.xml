<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/small_logo"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="138dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/logo_alt" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="165dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <ImageButton
            android:id="@+id/menuSpinner"
            android:layout_width="50dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#009C3333"
            android:paddingEnd="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="126dp"
            android:layout_height="67dp"

            android:paddingTop="1dp"
            android:scaleType="centerInside"
            android:scaleX="1.7"
            android:scaleY="1.3"
            app:srcCompat="@drawable/main_logo" />

        <ImageButton
            android:id="@+id/configButton"
            android:layout_width="50dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:paddingStart="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_settings" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/small_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="286dp"
            android:layout_height="259dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="53dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/artworks_000237469700_lm76po_t500x500"
            tools:srcCompat="@drawable/artworks_000237469700_lm76po_t500x500" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <LinearLayout
                android:layout_width="311dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_west_gradient"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:gravity="fill_vertical"
                    android:paddingLeft="4dp"
                    android:text="Without You"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/creator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_west_gradient"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:gravity="fill_vertical"
                    android:paddingLeft="4dp"
                    android:text="Avicii"
                    android:textColor="#FFFCFC"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/favorite_heart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/ic_west_gradient"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favorite"
                tools:srcCompat="@drawable/ic_favorite" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="58dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/ic_intense_gradient"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            tools:srcCompat="@drawable/ic_play" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
